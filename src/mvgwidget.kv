<MyScreen>:
    id: sm

    Screen:
        id: screen1
        name: 'screen1'
        canvas.before:
            Color:
                rgb: .2, .2, .2
            Rectangle:
                size: self.size

        BoxLayout:
            id: outerBL
            name: 'outerBL'
            orientation: 'vertical'
            padding: 20
            spacing: 10

            Label:
                id: routeLbl
                name: 'routeLbl'
                markup: True
                size_hint: 1, 0.000001

            BoxLayout:
                id: bl
                name:'bl'
                orientation: 'vertical'
                padding: 20
                spacing: 10
                size_hint: 1, 1

            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Add Entry'
                # on_release: root.add_entry()

            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Go to Settings Screen'
                on_release: sm.current = 'screen2'

    Screen:
        id: screen2
        name: 'screen2'
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10

            FloatLayout:
                Label:
                    text: 'Start:'
                    text_size: self.size
                    halign: 'left'
                    valign: 'top'
                    size_hint: 1, 0.3
                    pos_hint: {'x': 0, 'top': 1}

                TextInput:
                    id: start
                    hint_text:'Start'
                    size_hint: 1, 0.3
                    pos_hint: {'x': 0, 'top': 0.9}
                    background_color: (1,1,1,0.1) if self.focus else (0,0,0,0)
                    foreground_color: (1, 1, 1, 1)

                Label:
                    text: 'Destination:'
                    text_size: self.size
                    halign: 'left'
                    size_hint: 1, 0.3
                    pos_hint: {'x': 0, 'y': 0.36}

                TextInput:
                    id: dest
                    hint_text:'Destination'
                    size_hint: 1, 0.3
                    pos_hint: {'x': 0, 'y': 0}
                    background_color: (1,1,1,0.1) if self.focus else (0,0,0,0)
                    foreground_color: (1, 1, 1, 1)

            Label:
                text: 'Progression: {}%'.format(int(pb.value))
                size_hint_y: None
                height: '48dp'

            ProgressBar:
                id: pb
                size_hint_x: 1
                size_hint_y: None
                height: '48dp'
                value: (app.time * 20) % 100.
            
            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Go to Main Screen'
                on_release: sm.current = 'screen1'
