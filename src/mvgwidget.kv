<MyScreen>:
    id: sm

    Screen:
        id: screen1
        name: 'screen1'
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                size: self.size

        BoxLayout:
            id: outerBL
            name: 'outerBL'
            orientation: 'vertical'
            padding: 5
            spacing: 5

            Label:
                id: routeLbl
                name: 'routeLbl'
                markup: True
                size_hint: 1, 0.000001

            BoxLayout:
                id: bl
                name:'bl'
                orientation: 'vertical'
                padding: 5
                spacing: 5
                size_hint: 1, 1

            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Settings (F1)'
                on_release: app.open_settings()