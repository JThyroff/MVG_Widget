<MyScreen>:
    id: sm

    Screen:
        id: screen1
        name: 'screen1'
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                size: self.size

        BoxLayout:
            id: outerBL
            name: 'outerBL'
            orientation: 'vertical'
            padding: 5
            spacing: 5

            FloatLayout:
                id: floatLyt
                name: 'floatLyt'
                size_hint: 1, 0.1

                Label:
                    id: route_lbl
                    name: 'route_lbl'
                    markup: True
                    size_hint: 0.8, 1
                    pos_hint: {'x': 0, 'top': 1}

                Button:
                    size_hint: None, None
                    size: '65dp', '40dp'
                    text: 'Stg (F1)'
                    on_release: app.open_settings()
                    pos_hint: {'right':1, 'top': 1}

            BoxLayout:
                id: bl
                name:'bl'
                orientation: 'vertical'
                padding: 5
                spacing: 20
                size_hint: 1, 1

    Screen:
        id: settingsscreen
        name: 'settingsscreen'