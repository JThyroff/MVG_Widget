<MyScreen>:
    id: sm

    Screen:
        id: screen1
        name: 'screen1'
        canvas.before:
            Color:
                rgb: .2, .2, .2
            Rectangle:
                size: self.size
                
        BoxLayout:
            id: bl
            name:'bl'
            orientation: 'vertical'
            padding: 20
            spacing: 10

            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Add Entry'
                on_release: root.add_entry()

            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Go to Settings Screen'
                on_release: sm.current = 'screen2'

    Screen:
        id: screen2
        name: 'screen2'
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            
            Label:
                text: 'Progression: {}%'.format(int(pb.value))
                size_hint_y: None
                height: '48dp'

            ProgressBar:
                id: pb
                size_hint_x: 1
                size_hint_y: None
                height: '48dp'
                value: (app.time * 20) % 100.
            
            Button:
                size_hint: None, None
                size: '170dp', '48dp'
                text: 'Go to Main Screen'
                on_release: sm.current = 'screen1'
